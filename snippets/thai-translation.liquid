{% comment %}
  Thai Translation Component
  
  Usage:
  {% render 'thai-translation', 
    english_text: 'Hello', 
    thai_text: 'สวัสดี',
    phonetic: 'sà-wàt-dii',
    syllables: 'สวัส,ดี',
    meaning: 'Hello/Goodbye',
    example_thai: 'สวัสดีครับ ผมชื่อจอห์น',
    example_english: 'Hello, my name is John',
    example_phonetic: 'sà-wàt-dii kráp, pǒm chɯ̂ɯ jɔɔn'
  %}
{% endcomment %}

{% assign unique_id = thai_text | handle | append: '-' | append: forloop.index0 | default: 'default' %}

<span class="thai-translation-wrapper">
  {{ english_text }}
  <button
    type="button"
    class="thai-indicator"
    onclick="openThaiModal('{{ unique_id }}', event)"
    title="Thai: {{ thai_text }}"
    style="display: inline-flex; align-items: center; gap: 0.4rem; padding: 0.4rem 0.8rem; margin-left: 0.4rem; background: rgba(59, 130, 246, 0.1); color: rgb(29, 78, 216); border: 1px solid rgba(59, 130, 246, 0.3); border-radius: 0.6rem; font-size: 1.2rem; cursor: pointer; transition: all 0.2s ease;"
  >
    <span style="font-size: 1rem;">ไทย</span>
    <span style="color: rgba(59, 130, 246, 0.7); font-size: 1rem;">•</span>
    <span style="font-size: 1rem;">{{ thai_text }}</span>
  </button>
</span>

<!-- Thai Translation Modal -->
<div id="thai-modal-{{ unique_id }}" class="thai-modal">
  <div class="thai-modal__backdrop">
    <div class="thai-modal__container">
      <div class="thai-modal__content">
        <!-- Header -->
        <div class="thai-modal__header">
          <div class="thai-modal__header-left">
            <h2 class="thai-modal__title">Thai Pronunciation Guide</h2>
            <span class="thai-modal__category">{{ meaning }}</span>
          </div>
          <button
            type="button"
            onclick="closeThaiModal('{{ unique_id }}')"
            class="thai-modal__close"
            aria-label="Close modal"
          >
            ×
          </button>
        </div>

        <!-- Thai Word Display -->
        <div class="thai-modal__word-display">
          <div class="thai-modal__thai-text">{{ thai_text }}</div>
          <div class="thai-modal__phonetic">/{{ phonetic }}/</div>
        </div>

        <!-- Syllable Breakdown -->
        {% if syllables and syllables != blank %}
          {% assign syllable_array = syllables | split: ',' %}
          {% assign phonetic_parts = phonetic | split: '-' %}
          <div class="thai-modal__section">
            <h3 class="thai-modal__section-title">Syllable Breakdown</h3>
            <div class="thai-modal__syllables">
              {% for syllable in syllable_array %}
                <div class="thai-modal__syllable">
                  <div class="thai-modal__syllable-thai">{{ syllable }}</div>
                  <div class="thai-modal__syllable-phonetic">
                    /{{ phonetic_parts[forloop.index0] | default: syllable }}/
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}

        <!-- Pronunciation -->
        <div class="thai-modal__section thai-modal__section--highlight">
          <div class="thai-modal__pronunciation-header">
            <h3 class="thai-modal__section-title">Pronunciation</h3>
            <button
              type="button"
              onclick="playThaiAudio('{{ unique_id }}')"
              class="thai-modal__play-button"
            >
              <svg class="thai-modal__play-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon>
                <path d="M19.07 4.93a10 10 0 0 1 0 14.14M15.54 8.46a5 5 0 0 1 0 7.07"></path>
              </svg>
              Play Sound
            </button>
          </div>
          <div class="thai-modal__pronunciation-text">/{{ phonetic }}/</div>
          <div class="thai-modal__pronunciation-note">
            Click the play button to hear the pronunciation
          </div>
        </div>

        <!-- Example Usage -->
        {% if example_thai and example_thai != blank %}
          <div class="thai-modal__section">
            <h3 class="thai-modal__section-title">Example Usage</h3>
            <div class="thai-modal__examples">
              <div class="thai-modal__example">
                <span class="thai-modal__example-label">TH</span>
                <div class="thai-modal__example-content">
                  <div class="thai-modal__example-thai">{{ example_thai }}</div>
                  {% if example_phonetic and example_phonetic != blank %}
                    <div class="thai-modal__example-phonetic">/{{ example_phonetic }}/</div>
                  {% endif %}
                </div>
              </div>
              {% if example_english and example_english != blank %}
                <div class="thai-modal__example">
                  <span class="thai-modal__example-label">EN</span>
                  <div class="thai-modal__example-content">
                    <div class="thai-modal__example-english">{{ example_english }}</div>
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}

        <!-- Pronunciation Tips -->
        <div class="thai-modal__section thai-modal__section--tips">
          <h3 class="thai-modal__section-title">Pronunciation Tips</h3>
          <ul class="thai-modal__tips">
            <li>Thai is a tonal language - pay attention to the tone marks</li>
            <li>Practice each syllable separately first</li>
            <li>Listen to native speakers for the best pronunciation</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>


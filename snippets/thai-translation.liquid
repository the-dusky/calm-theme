<script>
  function openThaiModal(id, event) {
    // Prevent event bubbling to avoid triggering product navigation
    if (event) {
      event.preventDefault();
      event.stopPropagation();
    }
    
    let modal = document.getElementById('thai-modal-' + id);
    if (!modal) {
      console.error('Modal not found for id:', id);
      return;
    }
    
    // Move modal to body if it's not already there (to escape product card constraints)
    if (modal.parentElement !== document.body) {
      document.body.appendChild(modal);
    }
    
    modal.style.display = 'block';
    document.body.style.overflow = 'hidden';
    
    // Add animation
    setTimeout(() => {
      modal.style.opacity = '1';
    }, 10);
  }

  function closeThaiModal(id) {
    const modal = document.getElementById('thai-modal-' + id);
    if (modal) {
      modal.style.opacity = '0';
      setTimeout(() => {
        modal.style.display = 'none';
        document.body.style.overflow = 'auto';
      }, 200);
    }
  }

  function playThaiAudio(id) {
    // Mock audio playback - in real implementation, would play audio file
    console.log('Playing audio for Thai word: ' + id);
    // Future: implement actual audio playback
    // const audio = new Audio('/path/to/audio/' + id + '.mp3');
    // audio.play();
  }

  // Close modal when clicking outside
  document.addEventListener('click', function(event) {
    if (event.target.classList.contains('thai-modal')) {
      const modalId = event.target.id.replace('thai-modal-', '');
      closeThaiModal(modalId);
    }
  });

  // Close modal with escape key
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      const openModals = document.querySelectorAll('.thai-modal');
      openModals.forEach(function(modal) {
        if (modal.style.display === 'block') {
          const modalId = modal.id.replace('thai-modal-', '');
          closeThaiModal(modalId);
        }
      });
    }
  });
</script>
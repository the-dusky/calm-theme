{% comment %}
  Preorder Information Card
  
  Displays preorder information and "How it works" button
  Replaces the buy buttons section for preorder/drop products
  
  @param {product} product - The product object
  @param {collection} drop_collection - The collection with drop metafields
  @param {block} block - The block settings for styling
{% endcomment %}

{% liquid
  # Format the ship by date
  assign ship_by_date = drop_collection.metafields.custom.ship_by_date
  assign formatted_ship_date = 'TBD'
  if ship_by_date != blank
    assign formatted_ship_date = ship_by_date | date: '%B %d, %Y'
  endif
  
  # Format drop location if available
  assign drop_location = drop_collection.metafields.custom.drop_location
  assign location_text = ''
  if drop_location != blank
    assign location_text = ' (' | append: drop_location | append: ')'
  endif
%}

<div class="preorder-info-card spacing-style" style="{% render 'spacing-style', settings: block.settings %}">
  <div class="preorder-info-card__content">
    <div class="preorder-info-card__icon">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
        <path d="M12 6v6l4 2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
    
    <div class="preorder-info-card__text">
      <h3 class="preorder-info-card__title">
        {{ 'preorder.info_card.title' | t: default: 'This is a preorder item' }}{{ location_text }}
      </h3>
      <p class="preorder-info-card__description">
        {{ 'preorder.info_card.description' | t: ship_date: formatted_ship_date, default: 'I will ship out to customers on or before %{ship_date}.' }}
      </p>
    </div>
  </div>
  
  <div class="preorder-info-card__actions">
    <button 
      type="button" 
      class="preorder-info-card__how-it-works-btn"
      onclick="openHowItWorksModal()"
    >
      {{ 'preorder.info_card.how_it_works' | t: default: 'How it works' }}
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M7 17L17 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M7 7h10v10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </div>
  
  <!-- Still include the add to cart form for normal functionality -->
  {%- assign product_form_id = 'PreorderCard-ProductForm-' | append: block.id -%}
  <product-form-component
    data-section-id="{{ section.id }}"
    data-product-id="{{ product.id }}"
    data-product-url="{{ product.url }}"
    on:submit="/handleSubmit"
    class="preorder-info-card__form"
  >
    <div
      class="visually-hidden"
      aria-live="assertive"
      role="status"
      aria-atomic="true"
      ref="liveRegion"
    ></div>
    {%- form 'product', product, id: product_form_id, novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
      <input
        type="hidden"
        name="id"
        ref="variantId"
        value="{{ product.selected_or_first_available_variant.id }}"
      >
      <div class="preorder-info-card__buy-section">
        {% content_for 'block', type: 'quantity', id: 'quantity' %}
        {% content_for 'block',
          type: 'add-to-cart',
          id: 'add-to-cart',
          can_add_to_cart: true,
          add_to_cart_text: 'products.product.add_to_cart' | t
        %}
        <span
          class="product-form-text__error hidden"
          ref="addToCartTextError"
        >
          <span class="svg-wrapper product-form-icon--error">
            {{- 'icon-error.svg' | inline_asset_content -}}
          </span>
        </span>
      </div>
    {%- endform -%}
  </product-form-component>
</div>

<script>
  function openHowItWorksModal() {
    const howItWorksDialog = document.getElementById('how-it-works-dialog');
    if (howItWorksDialog && typeof howItWorksDialog.showDialog === 'function') {
      howItWorksDialog.showDialog();
    }
  }
</script>

{% stylesheet %}
  .preorder-info-card {
    border: 2px solid var(--color-accent);
    border-radius: var(--border-radius);
    background-color: var(--color-background-2);
    padding: var(--padding-lg);
    margin-bottom: var(--margin-lg);
  }

  .preorder-info-card__content {
    display: flex;
    align-items: flex-start;
    gap: var(--gap-md);
    margin-bottom: var(--margin-md);
  }

  .preorder-info-card__icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--color-accent);
    color: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .preorder-info-card__text {
    flex: 1;
  }

  .preorder-info-card__title {
    margin: 0 0 var(--margin-xs) 0;
    font-size: var(--font-size--md);
    font-weight: 600;
    color: var(--color-foreground);
    line-height: 1.3;
  }

  .preorder-info-card__description {
    margin: 0;
    font-size: var(--font-size--sm);
    color: var(--color-foreground-75);
    line-height: 1.4;
  }

  .preorder-info-card__actions {
    margin-bottom: var(--margin-md);
  }

  .preorder-info-card__how-it-works-btn {
    background: none;
    border: 1px solid var(--color-accent);
    color: var(--color-accent);
    padding: var(--padding-sm) var(--padding-md);
    border-radius: var(--border-radius);
    font-size: var(--font-size--sm);
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s var(--animation-easing);
    display: inline-flex;
    align-items: center;
    gap: var(--gap-xs);
  }

  .preorder-info-card__how-it-works-btn:hover {
    background-color: var(--color-accent);
    color: var(--color-background);
  }

  .preorder-info-card__form {
    border-top: 1px solid var(--color-border);
    padding-top: var(--padding-md);
  }

  .preorder-info-card__buy-section {
    display: flex;
    flex-wrap: wrap;
    gap: var(--gap-sm);
    align-items: flex-end;
  }

  .preorder-info-card__buy-section .quantity-selector {
    flex-shrink: 0;
  }

  .preorder-info-card__buy-section .add-to-cart-button {
    flex: 1;
    min-width: 185px;
  }

  .preorder-info-card__buy-section .product-form-text__error {
    flex-basis: 100%;
    display: flex;
    align-items: flex-start;
    gap: var(--gap-xs);
  }

  @media screen and (max-width: 750px) {
    .preorder-info-card__content {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .preorder-info-card__buy-section {
      flex-direction: column;
      align-items: stretch;
    }

    .preorder-info-card__buy-section .add-to-cart-button {
      min-width: unset;
    }
  }
{% endstylesheet %}
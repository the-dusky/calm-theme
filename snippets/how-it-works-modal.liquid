<how-it-works-dialog id="how-it-works-dialog">
  <dialog
    class="how-it-works-modal dialog-modal color-{{ settings.popover_color_scheme }}"
    ref="dialog"
    scroll-lock
  >
    <button
      ref="closeButton"
      on:click="/closeDialog"
      class="button how-it-works-modal__close"
      aria-label="{{ 'accessibility.close_dialog' | t }}"
    >
      {{- 'icon-close.svg' | inline_asset_content -}}
    </button>
    
    <div class="how-it-works-modal__content">
      <div class="how-it-works-modal__header">
        <h2 class="how-it-works-modal__title">{{ 'preorder.how_it_works.title' | t: default: 'How preorders work' }}</h2>
      </div>
      
      <div class="how-it-works-modal__body">
        <div class="how-it-works-modal__steps">
          <div class="how-it-works-modal__step">
            <div class="how-it-works-modal__step-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                <path d="M16 8l-6 6-2-2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <div class="how-it-works-modal__step-content">
              <h3 class="how-it-works-modal__step-title">{{ 'preorder.how_it_works.step1.title' | t: default: 'Place your order' }}</h3>
              <p class="how-it-works-modal__step-description">{{ 'preorder.how_it_works.step1.description' | t: default: 'Add items to your cart and complete checkout. Your payment method will be charged immediately.' }}</p>
            </div>
          </div>
          
          <div class="how-it-works-modal__step">
            <div class="how-it-works-modal__step-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                <path d="M12 6v6l4 2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <div class="how-it-works-modal__step-content">
              <h3 class="how-it-works-modal__step-title">{{ 'preorder.how_it_works.step2.title' | t: default: 'We prepare your order' }}</h3>
              <p class="how-it-works-modal__step-description">{{ 'preorder.how_it_works.step2.description' | t: default: 'Your items are being crafted with care. We\'ll keep you updated on the progress.' }}</p>
            </div>
          </div>
          
          <div class="how-it-works-modal__step">
            <div class="how-it-works-modal__step-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" stroke="currentColor" stroke-width="2"/>
                <circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <div class="how-it-works-modal__step-content">
              <h3 class="how-it-works-modal__step-title">{{ 'preorder.how_it_works.step3.title' | t: default: 'Your order ships' }}</h3>
              <p class="how-it-works-modal__step-description">{{ 'preorder.how_it_works.step3.description' | t: default: 'Once ready, your order ships by the estimated date. You\'ll receive tracking information.' }}</p>
            </div>
          </div>
        </div>
        
        <div class="how-it-works-modal__note">
          <div class="how-it-works-modal__note-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
              <path d="M12 16v-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12 8h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <div class="how-it-works-modal__note-content">
            <p><strong>{{ 'preorder.how_it_works.note.title' | t: default: 'Important:' }}</strong> {{ 'preorder.how_it_works.note.description' | t: default: 'Preorder items cannot be combined with regular items in the same order. Ship dates are estimates and may change based on production schedules.' }}</p>
          </div>
        </div>
      </div>
      
      <div class="how-it-works-modal__actions">
        <button 
          type="button" 
          class="button button--primary how-it-works-modal__close-btn"
          ref="closeButton2"
          on:click="/closeDialog"
        >
          {{ 'preorder.how_it_works.got_it' | t: default: 'Got it' }}
        </button>
      </div>
    </div>
  </dialog>
</how-it-works-dialog>

{% stylesheet %}
  .how-it-works-modal {
    padding: 0;
    border: var(--style-border-popover);
    height: fit-content;
    width: min(90vw, 600px);
    max-height: 90vh;
    overflow: hidden;
    box-shadow: 0 5px 30px rgba(0, 0, 0, 0.15);
    border-radius: var(--border-radius);

    @media screen and (max-width: 750px) {
      width: 95vw;
      max-width: none;
      border-radius: var(--border-radius);
    }
  }

  .how-it-works-modal[open] {
    display: flex;
    flex-direction: column;
    animation: modalSlideInTop var(--animation-speed) var(--animation-easing) forwards;
  }

  .how-it-works-modal.dialog-closing {
    animation: modalSlideOutTop var(--animation-speed) var(--animation-easing) forwards;
  }

  .how-it-works-modal__close {
    position: absolute;
    top: var(--margin-2xs);
    right: var(--margin-2xs);
    width: var(--minimum-touch-target);
    height: var(--minimum-touch-target);
    color: var(--color-foreground);
    background-color: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    z-index: 2;
    transition: transform 0.15s var(--animation-timing-bounce), opacity 0.15s var(--animation-easing);
  }

  .how-it-works-modal__close:active {
    transform: scale(0.8);
  }

  .how-it-works-modal__close svg {
    width: var(--icon-size-xs);
    height: var(--icon-size-xs);
  }

  .how-it-works-modal__content {
    display: flex;
    flex-direction: column;
    padding: var(--padding-xl);
    padding-top: var(--padding-3xl);
    gap: var(--gap-lg);
    overflow-y: auto;
    flex: 1;
  }

  .how-it-works-modal__header {
    text-align: center;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: var(--padding-md);
  }

  .how-it-works-modal__title {
    margin: 0;
    font-size: var(--font-size--xl);
    font-weight: 600;
    color: var(--color-foreground);
  }

  .how-it-works-modal__steps {
    display: flex;
    flex-direction: column;
    gap: var(--gap-lg);
  }

  .how-it-works-modal__step {
    display: flex;
    gap: var(--gap-md);
    align-items: flex-start;
  }

  .how-it-works-modal__step-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: var(--color-accent);
    color: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: var(--margin-xs);
  }

  .how-it-works-modal__step-content {
    flex: 1;
  }

  .how-it-works-modal__step-title {
    margin: 0 0 var(--margin-xs) 0;
    font-size: var(--font-size--md);
    font-weight: 600;
    color: var(--color-foreground);
  }

  .how-it-works-modal__step-description {
    margin: 0;
    font-size: var(--font-size--sm);
    line-height: 1.4;
    color: var(--color-foreground-75);
  }

  .how-it-works-modal__note {
    display: flex;
    gap: var(--gap-sm);
    padding: var(--padding-md);
    background-color: var(--color-background-2);
    border-radius: var(--border-radius);
    border-left: 4px solid var(--color-accent);
    margin-top: var(--margin-md);
  }

  .how-it-works-modal__note-icon {
    flex-shrink: 0;
    color: var(--color-accent);
    margin-top: var(--margin-2xs);
  }

  .how-it-works-modal__note-content {
    flex: 1;
  }

  .how-it-works-modal__note-content p {
    margin: 0;
    font-size: var(--font-size--sm);
    line-height: 1.4;
    color: var(--color-foreground-75);
  }

  .how-it-works-modal__actions {
    display: flex;
    justify-content: center;
    margin-top: var(--margin-md);
    border-top: 1px solid var(--color-border);
    padding-top: var(--padding-md);
  }

  .how-it-works-modal__close-btn {
    padding: var(--padding-md) var(--padding-xl);
    border-radius: var(--border-radius);
    font-weight: 500;
    transition: all 0.2s var(--animation-easing);
    background-color: var(--color-button);
    color: var(--color-button-text);
    border: none;
    min-width: 120px;
  }

  .how-it-works-modal__close-btn:hover {
    background-color: var(--color-button-hover);
  }
{% endstylesheet %}
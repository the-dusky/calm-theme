<how-it-works-dialog id="how-it-works-dialog">
  <dialog
    class="how-it-works-modal dialog-modal color-{{ settings.popover_color_scheme }}"
    ref="dialog"
    scroll-lock
  >
    <button
      ref="closeButton"
      on:click="/closeDialog"
      class="button how-it-works-modal__close"
      aria-label="{{ 'accessibility.close_dialog' | t }}"
    >
      {{- 'icon-close.svg' | inline_asset_content -}}
    </button>
    
    <div class="how-it-works-modal__content">
      <div class="how-it-works-modal__header">
        <h2 class="how-it-works-modal__title">{{ 'preorder.how_it_works.title' | t: default: 'How It Works' }}</h2>
        <p class="how-it-works-modal__subtitle">{{ 'preorder.how_it_works.modal_subtitle' | t: default: 'Your shipping timeline' }}</p>
      </div>
      
      <div class="how-it-works-modal__body">
        <!-- Horizontal timeline -->
        <div class="timeline">
          <div class="timeline__line"></div>
          
          <div class="timeline__steps">
            <div class="timeline__step timeline__step--active">
              <div class="timeline__step-icon">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                  <path d="M16 8l-6 6-2-2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="timeline__step-content">
                <h4 class="timeline__step-title">{{ 'preorder.how_it_works.step1.title' | t: default: 'Place Order' }}</h4>
                <p class="timeline__step-description">{{ 'preorder.how_it_works.step1.modal_description' | t: default: 'Complete checkout' }}</p>
              </div>
            </div>
            
            <div class="timeline__step">
              <div class="timeline__step-icon">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                  <path d="M12 6v6l4 2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="timeline__step-content">
                <h4 class="timeline__step-title">{{ 'preorder.how_it_works.step2.title' | t: default: 'We Prepare' }}</h4>
                <p class="timeline__step-description">{{ 'preorder.how_it_works.step2.modal_description' | t: default: 'Items crafted' }}</p>
              </div>
            </div>
            
            <div class="timeline__step">
              <div class="timeline__step-icon">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <rect x="2" y="3" width="20" height="14" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
                  <line x1="8" y1="21" x2="16" y2="21" stroke="currentColor" stroke-width="2"/>
                  <line x1="12" y1="17" x2="12" y2="21" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <div class="timeline__step-content">
                <h4 class="timeline__step-title">{{ 'preorder.how_it_works.step3.title' | t: default: 'Processing' }}</h4>
                <p class="timeline__step-description">{{ 'preorder.how_it_works.step3.modal_description' | t: default: 'Quality check' }}</p>
              </div>
            </div>
            
            <div class="timeline__step">
              <div class="timeline__step-icon">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" stroke="currentColor" stroke-width="2"/>
                  <circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <div class="timeline__step-content">
                <h4 class="timeline__step-title">{{ 'preorder.how_it_works.step4.title' | t: default: 'Ships' }}</h4>
                <p class="timeline__step-description">{{ 'preorder.how_it_works.step4.modal_description' | t: default: 'To your door' }}</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Transparency notes -->
        <div class="transparency-notes">
          <div class="transparency-notes__item">
            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" stroke="currentColor" stroke-width="2"/>
            </svg>
            <span>{{ 'preorder.how_it_works.transparency1' | t: default: 'Starting slow to learn from you' }}</span>
          </div>
          <div class="transparency-notes__item">
            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" stroke="currentColor" stroke-width="2"/>
            </svg>
            <span>{{ 'preorder.how_it_works.transparency2' | t: default: 'Items cannot be combined with regular orders' }}</span>
          </div>
          <div class="transparency-notes__item">
            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" stroke="currentColor" stroke-width="2"/>
            </svg>
            <span>{{ 'preorder.how_it_works.transparency3' | t: default: 'Dates are estimates and may change' }}</span>
          </div>
        </div>

        <!-- Footer -->
        <div class="how-it-works-modal__footer">
          <p class="how-it-works-modal__footer-text">
            {{ 'preorder.how_it_works.transparency_statement' | t: default: 'Radical transparency. Every decision explained.' }}
          </p>
        </div>
      </div>
      
      <div class="how-it-works-modal__actions">
        <button 
          type="button" 
          class="button button--primary how-it-works-modal__close-btn"
          ref="closeButton2"
          on:click="/closeDialog"
        >
          {{ 'preorder.how_it_works.got_it' | t: default: 'Got it' }}
        </button>
      </div>
    </div>
  </dialog>
</how-it-works-dialog>

{% stylesheet %}
  .how-it-works-modal {
    padding: 0;
    border: var(--style-border-popover);
    height: fit-content;
    width: min(90vw, 640px);
    max-height: 90vh;
    overflow: hidden;
    box-shadow: 0 5px 30px rgba(0, 0, 0, 0.15);
    border-radius: var(--border-radius);

    @media screen and (max-width: 750px) {
      width: 95vw;
      max-width: none;
      border-radius: var(--border-radius);
    }
  }

  .how-it-works-modal[open] {
    display: flex;
    flex-direction: column;
    animation: modalSlideInTop var(--animation-speed) var(--animation-easing) forwards;
  }

  .how-it-works-modal.dialog-closing {
    animation: modalSlideOutTop var(--animation-speed) var(--animation-easing) forwards;
  }

  .how-it-works-modal__close {
    position: absolute;
    top: var(--margin-2xs);
    right: var(--margin-2xs);
    width: var(--minimum-touch-target);
    height: var(--minimum-touch-target);
    color: var(--color-foreground);
    background-color: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    z-index: 2;
    transition: transform 0.15s var(--animation-timing-bounce), opacity 0.15s var(--animation-easing);
  }

  .how-it-works-modal__close:active {
    transform: scale(0.8);
  }

  .how-it-works-modal__close svg {
    width: var(--icon-size-xs);
    height: var(--icon-size-xs);
  }

  .how-it-works-modal__content {
    display: flex;
    flex-direction: column;
    padding: var(--padding-xl);
    padding-top: var(--padding-3xl);
    gap: var(--gap-lg);
    overflow-y: auto;
    flex: 1;
  }

  .how-it-works-modal__header {
    text-align: center;
    margin-bottom: var(--margin-lg);
  }

  .how-it-works-modal__title {
    margin: 0 0 var(--margin-xs) 0;
    font-size: var(--font-size--xl);
    font-weight: 600;
    color: var(--color-foreground);
  }

  .how-it-works-modal__subtitle {
    margin: 0;
    font-size: var(--font-size--sm);
    color: var(--color-foreground-75);
  }

  /* Timeline styles */
  .timeline {
    position: relative;
    margin-bottom: var(--margin-xl);
  }

  .timeline__line {
    position: absolute;
    top: 20px;
    left: 20px;
    right: 20px;
    height: 2px;
    background-color: var(--color-border);
    z-index: 1;
  }

  .timeline__steps {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--gap-sm);
    position: relative;
    z-index: 2;
  }

  .timeline__step {
    text-align: center;
  }

  .timeline__step-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 2px solid var(--color-border);
    background-color: var(--color-background);
    color: var(--color-foreground-50);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--margin-sm) auto;
    position: relative;
    z-index: 3;
    transition: all 0.2s var(--animation-easing);
  }

  .timeline__step--active .timeline__step-icon {
    background-color: var(--color-accent);
    border-color: var(--color-accent);
    color: var(--color-background);
  }

  .timeline__step-content {
    padding: 0 var(--padding-xs);
  }

  .timeline__step-title {
    margin: 0 0 var(--margin-2xs) 0;
    font-size: var(--font-size--xs);
    font-weight: 600;
    color: var(--color-foreground);
    line-height: 1.2;
  }

  .timeline__step-description {
    margin: 0;
    font-size: var(--font-size--xs);
    color: var(--color-foreground-75);
    line-height: 1.2;
  }

  /* Transparency notes */
  .transparency-notes {
    display: flex;
    flex-direction: column;
    gap: var(--gap-sm);
    margin-bottom: var(--margin-lg);
  }

  .transparency-notes__item {
    display: flex;
    align-items: center;
    gap: var(--gap-sm);
    font-size: var(--font-size--xs);
    color: var(--color-foreground-75);
    line-height: 1.3;
  }

  .transparency-notes__item svg {
    flex-shrink: 0;
    color: var(--color-accent);
  }

  /* Footer */
  .how-it-works-modal__footer {
    text-align: center;
  }

  .how-it-works-modal__footer-text {
    margin: 0;
    font-size: var(--font-size--xs);
    color: var(--color-foreground-75);
    font-style: italic;
  }

  .how-it-works-modal__actions {
    display: flex;
    justify-content: center;
    margin-top: var(--margin-md);
    border-top: 1px solid var(--color-border);
    padding-top: var(--padding-md);
  }

  .how-it-works-modal__close-btn {
    padding: var(--padding-md) var(--padding-xl);
    border-radius: var(--border-radius);
    font-weight: 500;
    transition: all 0.2s var(--animation-easing);
    background-color: var(--color-button);
    color: var(--color-button-text);
    border: none;
    min-width: 120px;
  }

  .how-it-works-modal__close-btn:hover {
    background-color: var(--color-button-hover);
  }

  /* Mobile adjustments */
  @media screen and (max-width: 750px) {
    .timeline__steps {
      gap: var(--gap-xs);
    }

    .timeline__step-icon {
      width: 32px;
      height: 32px;
    }

    .timeline__step-icon svg {
      width: 14px;
      height: 14px;
    }

    .timeline__step-title,
    .timeline__step-description {
      font-size: var(--font-size--2xs);
    }

    .transparency-notes__item {
      font-size: var(--font-size--2xs);
    }

    .transparency-notes__item svg {
      width: 10px;
      height: 10px;
    }
  }
{% endstylesheet %}
<preorder-prompt-dialog id="preorder-prompt-dialog">
  <dialog
    class="preorder-prompt-modal dialog-modal color-{{ settings.popover_color_scheme }}"
    ref="dialog"
    scroll-lock
  >
    <button
      ref="closeButton"
      on:click="/closeDialog"
      class="button preorder-prompt-modal__close"
      aria-label="{{ 'accessibility.close_dialog' | t }}"
    >
      {{- 'icon-close.svg' | inline_asset_content -}}
    </button>
    
    <div class="preorder-prompt-modal__content">
      <div class="preorder-prompt-modal__header">
        <h2 class="preorder-prompt-modal__title">{{ 'preorder.modal.title' | t: default: 'This is a preorder item' }}</h2>
      </div>
      
      <div class="preorder-prompt-modal__body">
        <div class="preorder-prompt-modal__shipping-info">
          <p class="preorder-prompt-modal__shipping-message">
            <strong>{{ 'preorder.modal.shipping_confirmation' | t: default: 'This will ship on or before' }}</strong>
            <span class="preorder-prompt-modal__ship-date">
              <!-- Ship date will be populated by JavaScript -->
            </span>
          </p>
        </div>
        
        <div class="preorder-prompt-modal__preference">
          <label class="preorder-prompt-modal__checkbox-label">
            <input 
              type="checkbox" 
              class="preorder-prompt-modal__checkbox"
              id="skip-preorder-confirmation"
            >
            <span class="preorder-prompt-modal__checkbox-text">
              {{ 'preorder.modal.dont_show_again' | t: default: "Don't show this confirmation message anymore" }}
            </span>
          </label>
        </div>
      </div>
      
      <div class="preorder-prompt-modal__actions">
        <button 
          type="button" 
          class="button button--primary preorder-prompt-modal__confirm"
          ref="confirmButton"
          on:click="/confirmPreorder"
        >
          {{ 'preorder.modal.confirm' | t: default: 'Add to Cart' }}
        </button>
        
        <button 
          type="button" 
          class="button button--secondary preorder-prompt-modal__cancel"
          ref="cancelButton"
          on:click="/closeDialog"
        >
          {{ 'preorder.modal.cancel' | t: default: 'Cancel' }}
        </button>
      </div>
    </div>
  </dialog>
</preorder-prompt-dialog>

{% stylesheet %}
  .preorder-prompt-modal {
    padding: 0;
    border: var(--style-border-popover);
    height: fit-content;
    width: min(90vw, 500px);
    max-height: 90vh;
    overflow: hidden;
    box-shadow: 0 5px 30px rgba(0, 0, 0, 0.15);
    border-radius: var(--border-radius);

    @media screen and (max-width: 750px) {
      width: 95vw;
      max-width: none;
      border-radius: var(--border-radius);
    }
  }

  .preorder-prompt-modal[open] {
    display: flex;
    flex-direction: column;
    animation: modalSlideInTop var(--animation-speed) var(--animation-easing) forwards;
  }

  .preorder-prompt-modal.dialog-closing {
    animation: modalSlideOutTop var(--animation-speed) var(--animation-easing) forwards;
  }

  .preorder-prompt-modal__close {
    position: absolute;
    top: var(--margin-2xs);
    right: var(--margin-2xs);
    width: var(--minimum-touch-target);
    height: var(--minimum-touch-target);
    color: var(--color-foreground);
    background-color: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    z-index: 2;
    transition: transform 0.15s var(--animation-timing-bounce), opacity 0.15s var(--animation-easing);
  }

  .preorder-prompt-modal__close:active {
    transform: scale(0.8);
  }

  .preorder-prompt-modal__close svg {
    width: var(--icon-size-xs);
    height: var(--icon-size-xs);
  }

  .preorder-prompt-modal__content {
    display: flex;
    flex-direction: column;
    padding: var(--padding-xl);
    padding-top: var(--padding-3xl);
    gap: var(--gap-lg);
    overflow-y: auto;
    flex: 1;
  }

  .preorder-prompt-modal__header {
    text-align: center;
  }

  .preorder-prompt-modal__title {
    margin: 0;
    font-size: var(--font-size--xl);
    font-weight: 600;
    color: var(--color-foreground);
  }


  .preorder-prompt-modal__shipping-info {
    padding: var(--padding-lg);
    background-color: var(--color-background-2);
    border-radius: var(--border-radius);
    border-left: 4px solid var(--color-accent);
    margin-bottom: var(--margin-lg);
    text-align: center;
  }

  .preorder-prompt-modal__shipping-message {
    margin: 0;
    font-size: var(--font-size--md);
    line-height: 1.4;
    color: var(--color-foreground);
  }

  .preorder-prompt-modal__ship-date {
    color: var(--color-accent);
    font-weight: 600;
  }

  .preorder-prompt-modal__preference {
    margin-bottom: var(--margin-lg);
    padding: var(--padding-md);
    background-color: rgba(var(--color-accent-rgb), 0.05);
    border-radius: var(--border-radius);
  }

  .preorder-prompt-modal__checkbox-label {
    display: flex;
    align-items: flex-start;
    gap: var(--gap-sm);
    cursor: pointer;
    font-size: var(--font-size--sm);
    line-height: 1.4;
  }

  .preorder-prompt-modal__checkbox {
    flex-shrink: 0;
    margin: 0;
    margin-top: 2px; /* Align with text */
  }

  .preorder-prompt-modal__checkbox-text {
    color: var(--color-foreground-75);
    user-select: none;
  }

  .preorder-prompt-modal__actions {
    display: flex;
    gap: var(--gap-md);
    margin-top: var(--margin-md);

    @media screen and (max-width: 480px) {
      flex-direction: column;
    }
  }

  .preorder-prompt-modal__confirm,
  .preorder-prompt-modal__cancel {
    flex: 1;
    padding: var(--padding-md) var(--padding-lg);
    border-radius: var(--border-radius);
    font-weight: 500;
    transition: all 0.2s var(--animation-easing);
  }

  .preorder-prompt-modal__confirm {
    background-color: var(--color-button);
    color: var(--color-button-text);
    border: none;
  }

  .preorder-prompt-modal__confirm:hover {
    background-color: var(--color-button-hover);
  }

  .preorder-prompt-modal__cancel {
    background-color: transparent;
    color: var(--color-foreground);
    border: 1px solid var(--color-border);
  }

  .preorder-prompt-modal__cancel:hover {
    background-color: var(--color-background-2);
  }
{% endstylesheet %}